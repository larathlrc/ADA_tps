<script>
    function cargarEjercicio(archivo) {
      
      document.querySelectorAll("script[data-ejercicio]").forEach(s => s.remove());

      const script = document.createElement("script");
      script.src = archivo;
      script.setAttribute("data-ejercicio", "true");
      document.body.appendChild(script); 

      console.clear();
      console.log(`Ejecutando: ${archivo}`);
    }
  </script>
  
